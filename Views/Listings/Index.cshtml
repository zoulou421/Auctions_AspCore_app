@model List<Auctions.Models.Listing>

@{
    ViewData["Title"] = "Index";
}

<h1>Active Listings</h1>

@if (Model.Any())
{
    @foreach (var listing in Model)
    {
        <div class="card mb-4" style="background-color:rgba(138,129,133,0.1);">
            <div class="row no-gutters">
                <div class="col-12 col-lg-5">
                    <img class="card-img-top img-fluid"
                         src="~/Images/@(listing.ImagePath ?? "default.jpg")"
                         alt="Image of @listing.Title"
                         style="max-width:400px; max-height:400px;" />
                </div>
                <div class="col-12 col-lg-7">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a asp-action="Details" asp-route-id="@listing.Id" class="text-dark">
                                @listing.Title
                            </a>
                        </h5>
                        <p class="card-text">@listing.Description</p>
                        <p class="card-text"><strong>Bid:</strong> $@listing.Price.ToString("N2")</p>
                        <p class="card-text">
                            <small class="text-muted">
                                Listed by: @listing.User?.Email
                            </small>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <p>No Active Listings</p>
}
